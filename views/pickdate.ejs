    <body style="background-color: #E8ECEF;padding: 5%;">
      
      <h3 class="display-6" style="margin-top: 35px;">Select your Date:</h3>
        <div class="container">
          <div class="jumbotron centered">
              
              <% var date = new Date();  %>
              <% var year = date.getFullYear().toString(); %>
              <% var month = (date.getMonth()+1).toString(); %>
              <% var day = date.getDate().toString(); %>
              <% var newDate = new Date(date.setDate(date.getDate() + 30)) %>
              <% var newyear = newDate.getFullYear().toString(); %>
              <% var newmonth = (newDate.getMonth()+1).toString(); %>
              <% var newday = newDate.getDate().toString(); %>
              <% if(newday.length == 1){ %>
              <%    newday = "0"+newday; %>
              <% } %>    
              <% if(newmonth.length == 1){ %>
              <%    newmonth = "0"+newmonth; %>
              <% } %>
              <% if(month.length == 1){ %>
              <%    month = "0"+month; %>
              <% } %>
              <% if(day.length == 1){ %>
              <%    day = "0"+day; %>
              <% } %>
              <% var minDate = year+"-"+month+"-"+day; %>
              <% var maxDate = newyear+"-"+newmonth+"-"+newday; %>
              <div class="card">
                <div class="card-header">
                  <h4 style="display: inline;">Dr. <%=doctor.name%></h4>
                  
                </div>
                <div class="card-body">
                    <p class="cart-text"><b>Age: </b><%=doctor.age%> <span style="float: right;"><b>Qualification: </b><%=doctor.qualification%></span><br>
                    <span style="float: left;"><b>Speciality: </b><%=doctor.speciality%></span> <span style="float: right;"><b>Experience: </b><%=doctor.experience%> years</span><br>
                    <span style="float: left;"><b>Consultant in: </b><%=doctor.hospital%></span> <span style="float: right;"><b>Locality: </b><%=doctor.city%></span><br>
                    <span style="float: left;"><b>Address: </b><%=doctor.address%></span><br>
                    <span style="float: left;"><b>Contact number: </b><%=doctor.contact%></span><br></p>
                    <form action="/book/<%=doctor._id%>" method="POST">
                        <div class="form-group">
                            <label for="dob"><b>Select Appointment Date:</b></label>
                            <input id="tbName" type="date" class="form-control" name="date" required min="<%=minDate%>" max="<%=maxDate%>" >
                          </div>
                          <button type="submit" class="btn btn-primary">Book Appointment</button>
                    </form>
                    
                </div>
                
              </div>

              
          </div>
        </div>
